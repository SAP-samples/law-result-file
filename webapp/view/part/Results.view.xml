<mvc:View controllerName="glacelx.glacelx.controller.part.Results"
	xmlns:c="sap.ui.core"
	xmlns:ce="sap.ui.codeeditor"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:fo="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
	xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:cols="controller.layout">

	<cols:EqualWidthColumns id="selectedResult">
		<cols:content>
			<Panel headerText="{'lawFile>PartId'}" class="sapUiNoMargin">
				<Table id="resultTable" 
					inset="false" 										
					growingScrollToLoad="true"
					noDataText="{i18n>result.table.noData.text}">
					<columns>
						<Column>
							<Text text="{i18n>model.result.col.GenericId.text}"/>
						</Column>
						<Column>
							<Text text="{i18n>model.result.col.Unit.text}"/>
						</Column>
						<Column>
							<Text text="{i18n>model.result.col.PerStart.text}"/>
						</Column>
						<Column>
							<Text text="{i18n>model.result.col.PerEnd.text}"/>
						</Column>
						<Column>
							<Text text="{i18n>model.result.col.Attr1.text}"/>
						</Column>
						<Column>
							<Text text="{i18n>model.result.col.Attr2.text}"/>
						</Column>
						<Column>
							<Text text="{i18n>model.result.col.Counter.text}"/>
						</Column>
					</columns>
				</Table>									
			</Panel>
			
			<Panel headerText="{i18n>xml.headerText}" class="sapUiNoMargin">
					<Button text="{i18n>xml.button.top}" icon="sap-icon://sys-first-page" class="navButton"/>
					<Button text="{i18n>xml.button.up}" icon="sap-icon://sys-prev-page" class="navButton"/>
					<Button text="{i18n>xml.button.down}" icon="sap-icon://sys-next-page" class="navButton"/>
					<Button text="{i18n>xml.button.bottom}" icon="sap-icon://sys-last-page" class="navButton"/>
					<Button text="{i18n>xml.button.goto}" icon="sap-icon://sales-document" class="navButton"/>

				<ce:CodeEditor id="resultsCE" type="xml" class="wattEditorContainer"/>
									 
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
			 </Panel>
					 
		</cols:content>
	</cols:EqualWidthColumns>
</mvc:View>