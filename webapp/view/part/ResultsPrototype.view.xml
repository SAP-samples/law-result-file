<mvc:View controllerName="glacelx.glacelx.controller.part.ResultsPrototype"
	xmlns:c="sap.ui.core"
	xmlns:ce="sap.ui.codeeditor"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:fo="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
	xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:cols="controller.layout">

	<cols:EqualWidthColumns id="selectedResult2">
		<cols:content>
			<l:VerticalLayout class="sapUiNoMargin" width="100%">
					<Panel headerText="{i18n>model.result.checks.CHKP.text}" class="sapUiNoMargin" expandable="true" expanded="true">
						<l:VerticalLayout class="sapUiNoMargin">
							<cols:ResultLine	title="{i18n>result.chkp.DELU}" 
												tag="{i18n>result.chkp.DELU.tag}" 
												text="{i18n>result.chkp.DELU.txt}"/>
							<cols:ResultLine	label="{i18n>result.chkp.DELU.Unit.period_12.txt}" 
												tag="{i18n>result.chkp.DELU.Unit.tag}" 
												text="{i18n>result.chkp.DELU.Unit.period_12.tag}"/>
							<cols:ResultLine	label="{i18n>result.chkp.DELU.PerStart.desc}" 
												tag="{i18n>result.chkp.DELU.PerStart.tag}" 
												text="{i18n>result.chkp.DELU.PerStart.txt}"/>
							<cols:ResultLine	label="{i18n>result.chkp.DELU.PerEnd.desc}" 
												tag="{i18n>result.chkp.DELU.PerEnd.tag}" 
												text="{i18n>result.chkp.DELU.PerEnd.txt}"/>							
							<cols:ResultLine	label="{parts:['i18n>result.chkp.DELU.Counter.desc', 'i18n>dummyNo8'], formatter: 'jQuery.sap.formatMessage'}" 
												tag="{i18n>result.chkp.DELU.Counter.tag}" 
												text="{i18n>dummyNo8}"/>													
							<cols:ResultLine	title="{i18n>result.chkp.EXPU}"
												tag="{i18n>result.chkp.DELU.tag}"
												text="{i18n>result.chkp.DELU.txt}"/>
							
						</l:VerticalLayout>		
					</Panel>
					<Panel headerText="{i18n>model.result.checks.ENGC.text}" class="sapUiNoMargin" expandable="true" expanded="true">
					</Panel>
					<Panel headerText="{i18n>model.result.checks.USR.text} Results" class="sapUiNoMargin" expandable="true" expanded="true">
					</Panel>					
			</l:VerticalLayout>			
			
			<Panel headerText="{i18n>xml.headerText}" class="sapUiNoMargin">
					<Button text="{i18n>xml.button.top}" icon="sap-icon://sys-first-page" class="navButton"/>
					<Button text="{i18n>xml.button.up}" icon="sap-icon://sys-prev-page" class="navButton"/>
					<Button text="{i18n>xml.button.down}" icon="sap-icon://sys-next-page" class="navButton"/>
					<Button text="{i18n>xml.button.bottom}" icon="sap-icon://sys-last-page" class="navButton"/>
					<Button text="{i18n>xml.button.goto}" icon="sap-icon://sales-document" class="navButton"/>

				<ce:CodeEditor id="resultsCE2" type="xml" class="wattEditorContainer"/>
									 
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
			 </Panel>
					 
		</cols:content>
	</cols:EqualWidthColumns>
</mvc:View>