<mvc:View controllerName="glacelx.glacelx.controller.Part"
	xmlns:c="sap.ui.core"
	xmlns:ce="sap.ui.codeeditor"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:fo="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
	xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>part.page.titlePlaceHolder}" showNavButton="true" navButtonPress="backToSystem" id="resultPage">
				<content>
					<IconTabBar
						id="iconTabBar"
						headerBackgroundDesign="Transparent"
						class="sapUiResponsiveContentPadding"
						select=".onTabSelect"
						expandable="false">
						<items>
							<!-- first tab is just for testing / UI design -->
							<IconTabFilter id="resultsPrototypeTab" text="{i18n>part.tab.Results.text}-Prototype" key="Results">
								<mvc:XMLView viewName="glacelx.glacelx.view.part.ResultsPrototype"></mvc:XMLView>
							</IconTabFilter> 
							<IconTabFilter id="resultsTab" text="{i18n>part.tab.Results.text}" key="Results">
								<mvc:XMLView viewName="glacelx.glacelx.view.part.Results"></mvc:XMLView>
							</IconTabFilter>
							<IconTabFilter id="propertiesTab" text="{i18n>part.tab.Properties.text}" key="Properties">
								<mvc:XMLView viewName="glacelx.glacelx.view.part.Properties"></mvc:XMLView>
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>
