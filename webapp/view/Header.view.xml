<mvc:View controllerName="sap.support.zglacelx.controller.Header"
	xmlns:c="sap.ui.core"
	xmlns:ce="sap.ui.codeeditor"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:fo="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
	xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:grid="sap.ui.layout.cssgrid"

    xmlns:cols="controller.layout">
	<App>
		<pages>
			<Page title="{i18n>header.page.title}" showNavButton="true" navButtonPress="onElements" id="headerPage">
				<subHeader>
					<OverflowToolbar >
						<Breadcrumbs currentLocationText="{i18n>elements.tiles.header.title}">
							<Link press="onNavLoad" text="{i18n>header.breadcrumb.load.text}"/>
							<Link press="onNavAll" text="{i18n>header.breadcrumb.all.text}"/>							
						</Breadcrumbs>				
						<ToolbarSpacer />						
						<Label text="{i18n>part.button.label.text}"/>
						<Button text="{i18n>part.button.next.text}" icon="sap-icon://sys-next-page" class="navButton" press="navToFirstSystem" />
						<Button text="{i18n>part.button.previous.text}" icon="sap-icon://sys-prev-page" class="navButton" press="navToPrevSystem" enabled="false"/>	

						<!-- <ToolbarSpacer />	
						<Label text="{i18n>part.button.label.text}"/>					
						<Button text="{i18n>nav.button.first}" icon="sap-icon://sys-first-page" class="navButton" enabled="false"/>
						<Button text="{i18n>nav.button.last}" icon="sap-icon://sys-last-page" class="navButton" press="navToLastSystem"/> -->

						<Select id="drop" />

					</OverflowToolbar>
				</subHeader>

				<content> 
					<cols:EqualWidthColumns>
						<cols:content>				
							<Panel headerText="{i18n>header.propsSection.title.text}" id="propSec" />
							<Panel headerText="{i18n>xml.headerText}">
								<ce:CodeEditor type="xml" class="wattEditorContainer" editable="false" id="headerCodeEditor" />
							 </Panel>
						</cols:content>
					</cols:EqualWidthColumns>									 
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>