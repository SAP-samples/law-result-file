<mvc:View controllerName="glacelx.glacelx.controller.Header"
	xmlns:c="sap.ui.core"
	xmlns:ce="sap.ui.codeeditor"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:fo="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
	xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:grid="sap.ui.layout.cssgrid">
	<App>
		<pages>
			<Page title="{i18n>header.page.title}" 
					showNavButton="true" navButtonPress="onElements" id="headerPage">
				<content> 
					<l:VerticalLayout class="sapUiContentPadding equalColumns" width="100%">
						<l:content>
							<FlexBox 
								width="100%"
								class="columns"
								alignItems="Stretch">
								<items>
									<Panel headerText="{i18n>header.propsSection.title.text}" class="column1">
										<content>
											<fo:SimpleForm 
													id="headerForm"
													editable="false"
													layout="ResponsiveGridLayout"
													labelSpanXL="10" 
													labelSpanL="10"	
													labelSpanM="10"	
													labelSpanS="5"	
													singleContainerFullSize="false">
												<fo:content>
													<Label text="{i18n>model.header.transfer.time.text}"/>
													<Text text="{Transfer/Time}" id="c43"/>
													<Label text="{i18n>model.header.transfer.name.text}"/>
													<Text text="{Transfer/Name}"/>
													<Label text="{i18n>model.header.transfer.version.text}"/>
													<Text text="{Transfer/Version}"/>
													<Label text="{i18n>model.header.transfer.program.text}" />
													<Text text="{Transfer/Program}"/>
                                                    <Label text="{i18n>model.header.transfer.type.text}" />
													<Text text="{Transfer/Type}"/>
                                                    <Label text="{i18n>model.header.sender.name.text}" />
													<Text text="{Sender/Name}"/>
                                                    <Label text="{i18n>model.header.sender.email.text}" />
													<Text text="{Sender/EMail}"/>
												</fo:content>
											</fo:SimpleForm>

										</content>
									</Panel>
									<Panel headerText="{i18n>xml.headerText}" class="column2">
											<Button text="{i18n>xml.button.top}" icon="sap-icon://sys-first-page" class="navButton"/>
											<Button text="{i18n>xml.button.up}" icon="sap-icon://sys-prev-page" class="navButton"/>
											<Button text="{i18n>xml.button.down}" icon="sap-icon://sys-next-page" class="navButton" press="navToNext"/>
											<Button text="{i18n>xml.button.bottom}" icon="sap-icon://sys-last-page" class="navButton" press="navToNext" />
											<Button text="{i18n>xml.button.goto}" icon="sap-icon://sales-document" class="navButton"/>
											<ce:CodeEditor type="xml" class="wattEditorContainer" editable="false" id="headerCodeEditor" />
										<layoutData>
											<FlexItemData growFactor="1" />
										</layoutData>
									 </Panel>
								</items>
							</FlexBox>
						</l:content>
					</l:VerticalLayout>										 
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>